            android:text="Vibration" />

        <Button
            android:id="@+id/morse_button_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light" />

        <Button
            android:id="@+id/morse_button_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound" />
    </LinearLayout>

